<odoo>
    <record id="view_confirm_state_change_wizard_form" model="ir.ui.view">
        <field name="name">confirm.state.change.wizard.form</field>
        <field name="model">confirm.state.change.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm State Change">
                <group>
                    <label for="state" string="Are you sure you want to change the state?"/>
                    <field name="state" />
                </group>
                <footer>
                    <button string="Confirm" type="object" name="confirm_action" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_state_change_wizard" model="ir.actions.act_window">
        <field name="name">Confirm State Change</field>
        <field name="res_model">confirm.state.change.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_confirm_state_change_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
