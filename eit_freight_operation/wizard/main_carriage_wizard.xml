<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_main_carriage_wizard_form" model="ir.ui.view">
            <field name="name">main.carriage.wizard.form</field>
            <field name="model">main.carriage.wizard</field>
            <field name="arch" type="xml">
                <form string="Main Carriage Details">
                    <sheet>
                        <group>
                            <group>
                                <field name="port_id" readonly="1"/>
                                <field name="vessel_id" readonly="1"/>
                                <field name="flight_no" readonly="1"/>
                                <field name="truck_no" readonly="1"/>
                            </group>
                            <group>
                                <field name="port_id_pod" readonly="1"/>
                                <field name="planned_date_from" readonly="1"/>
                                <field name="planned_date_to" readonly="1"/>
                                <field name="transit_time" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Close" class="btn-primary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_main_carriage_wizard" model="ir.actions.act_window">
            <field name="name">Main Carriage Details</field>
            <field name="res_model">main.carriage.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_main_carriage_wizard_form"/>
        </record>


    </data>
</odoo>