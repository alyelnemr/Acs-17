<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_task_closing_wizard_form" model="ir.ui.view">
            <field name="name">project.task.closing.wizard.form</field>
            <field name="model">project.task.closing.wizard</field>
            <field name="arch" type="xml">
                <form string="Project Task Closing Wizard">
                    <group>
                        <field name="date_field"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_project_task_closing_wizard" model="ir.actions.act_window">
            <field name="name">Project Task Closing Wizard</field>
            <field name="res_model">project.task.closing.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>