<odoo>
    <record id="operation_route_form_view" model="ir.ui.view">
        <field name="name">operation.route.form</field>
        <field name="model">operation.route</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="is_main_carriage_readonly" invisible="1" force_save="1"/>
                            <field name="routing_types_is_hidden" invisible="1" force_save="1"/>
                            <field name="service_scope_id" force_save="1"/>
                            <field name="is_main_carriage" readonly="is_main_carriage_readonly" force_save="1"/>
                            <field name="routing_types" invisible="routing_types_is_hidden" force_save="1"/>
                        </group>
                        <group>
                            <field name="loaded" widget="boolean_toggle" force_save="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="port_id_from" widget="selection" force_save="1"/>
                            <field name="port_id_to" widget="selection" force_save="1"/>
                            <field name="transport_type_id" invisible="1" force_save="1"/>
                            <field name="planned_date_start" invisible="1" force_save="1"/>
                            <field name="planned_date_end" invisible="1" force_save="1"/>
                            <field name="project_task_id" invisible="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="clearance_type_id" force_save="1"/>
                            <field name="planned_date_start" force_save="1"/>
                            <field name="planned_date_end" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Actual">
                            <group>
                                <group>
                                    <label for="transit_time" class="oe_inline" string="Transit Time"/>
                                    <div class="o_row">
                                        <field name="transit_time" force_save="1"/>
                                        <span class="oe_inline">Days</span>
                                    </div>
                                    <field name="air_line_partner_id" force_save="1"/>
                                    <field name="project_task_id" invisible="1"/>
                                </group>
                                <group>
                                    <field name="atd" force_save="1"/>
                                    <field name="ata" force_save="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Create" name="create_operation_route" type="object"
                            class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="operation_route_list_view" model="ir.ui.view">
        <field name="name">operation.route.list</field>
        <field name="model">operation.route</field>
        <field name="arch" type="xml">
            <tree>
                <field name="service_scope_id"/>
                <field name="is_main_carriage" />
                <field name="project_task_id" />
                <field name="routing_types" />
                <field name="loaded" widget="boolean_toggle"/>
                <field name="port_id_from"/>
                <field name="port_id_to"/>
                <field name="clearance_type_id"/>
                <field name="planned_date_start"/>
                <field name="planned_date_end"/>
                <field name="transit_time"/>
                <field name="atd"/>
                <field name="ata"/>
            </tree>
        </field>
    </record>
<record id="action_operation_route" model="ir.actions.act_window">
        <field name="name">Operation Routes</field>
        <field name="res_model">operation.route</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="operation_route_list_view"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first operation route
            </p>
        </field>
    </record>
