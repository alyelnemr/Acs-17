<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="container_data_form_inherited" model="ir.ui.view">
            <field name="name">container.data.form.inherited</field>
            <field name="model">container.data</field>
            <field name="inherit_id" ref="eit_freight_MasterData.container_data_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_project_tasks" type="object" string="Operations" invisible="not project_task_count"
                                class="oe_stat_button" icon="fa-tasks">
                            <field name="project_task_count" widget="statinfo" string="Operations"/>
                        </button>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>