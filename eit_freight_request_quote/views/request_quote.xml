    </template>
    <template id="thank_you_page" name="Thank You Page">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <h1>Thank You!</h1>
                        <p>Your request has been successfully submitted. We will get back to you soon.</p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
