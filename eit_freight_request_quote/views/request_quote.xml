<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template for Sign Up Form -->
    <template id="request_quote" name="Request Quote">
        <t t-call="website.layout">
            <script type="text/javascript">

            </script>
            <div id="wrap">
                <div class="oe_structure">
                    <div class="container">
                        <form role="form" id="request_quote_form" action="/web/shipping-request" method="post">
                            <input type="hidden" name="csrf_token"
                                   t-att-value="request.csrf_token()"/>
                            <input type="hidden" name="air_id" t-att-value="air_id"/>
                            <input type="hidden" name="sea_id" t-att-value="sea_id"/>
                            <input type="hidden" name="inland_id" t-att-value="inland_id"/>
                            <br/>
                            <br/>
                            <br/>
                            <br/>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label for="transport_type">Transport type</label>
                                    </div>
                                    <div class="col-md-2">
                                        <select id="transport_type" name="transport_type"
                                                class="form-control link-style">
                                            <t t-foreach="transport_type" t-as="item">
                                                <option t-esc="item.name" t-att-value="item.id"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <div class="row show_for_air" name="show_for_air_div" style="display: none;">
                                    <div class="form-group">
                                        <label for="by_unit_checkbox">By Unit</label>
                                        <input type="checkbox" name="by_unit_checkbox" t-att-value="by_unit"
                                               id="by_unit_checkbox"
                                               class="form-check-input toggleElement" checked="checked"/>
                                    </div>
                                    <div class="row show_for_by_unit" name="show_for_by_unit_div">
                                        <div class="form-group">
                                            <table id="dynamicTable_by_unit" class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>LOT</th>
                                                        <th>Dimensions L (CM)</th>
                                                        <th>Dimensions W (CM)</th>
                                                        <th>Dimensions H (CM)</th>
                                                        <th>QTY</th>
                                                        <th>Weight (KG)</th>
                                                        <th>CHW</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>
                                                            <input type="number" name="dimensions_l[]" class="form-control dimensions_l"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="dimensions_w[]" class="form-control dimensions_w"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="dimensions_h[]" class="form-control dimensions_h"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="quantity[]" class="form-control quantity"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="weight[]" class="form-control weight"/>
                                                        </td>
                                                        <td>
                                                            <input name="chw[]" readonly="readonly" class="form-control chw" />
                                                        </td>
                                                        <td>
                                                            <button id="removeRow" class="btn btn-danger removeRow">Remove</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <button id="addRow" class="btn btn-primary">Add New Line</button>
                                        </div>
                                    </div>
                                    <div class="row hide_for_by_unit" name="hide_for_by_unit_div" style="display: none;">
                                        <div class="form-group">
                                            <table id="Table" class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Weight (KG)</th>
                                                        <th>Volume (M3)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            <input type="number" name="weight_for_volume[]" class="form-control weight_for_volume"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="volume_for_volume[]" class="form-control volume_for_volume"/>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="row show_for_sea" name="show_for_sea_div" style="display:none;">
                                    <div class="col-md-2">
                                        <label for="equipment_type_for_sea">Equipment Type</label>
                                    </div>
                                    <div class="col-md-3">
                                        <select id="equipment_type_for_sea" name="equipment_type_for_sea" class="form-control link-style">
                                            <t t-foreach="equipment_type_for_sea" t-as="item">
                                                <option t-esc="item.name" t-att-value="item.code"/>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="row show_for_fcl_sea" name="show_for_fcl_sea_div" style="display: none;">
                                        <div class="form-group">
                                            <table id="dynamicTable_fcl_sea" class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>LOT</th>
                                                        <th>Container Type</th>
                                                        <th>QTY</th>
                                                        <th>Weight (KG)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>
                                                            <select name="container_type[]" class="form-control link-style">
                                                                <t t-foreach="container_type" t-as="item">
                                                                    <option t-esc="item.name" t-att-value="item.id"/>
                                                                </t>
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="quantity_for_volume_fcl[]" class="form-control quantity_fcl"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="weight_for_volume_fcl[]" class="form-control weight_fcl"/>
                                                        </td>
                                                        <td>
                                                            <button id="removeRow_fcl" class="btn btn-danger removeRow_fcl">Remove</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <button id="addRow_fcl" class="btn btn-primary">Add New Line</button>
                                        </div>
                                    </div>
                                    <div class="row show_for_lcl_sea" name="show_for_lcl_sea_div" style="display: none;">
                                        <div class="form-group">
                                            <label for="by_unit_lcl">By Unit</label>
                                            <input type="checkbox" name="by_unit_lcl_checkbox" t-att-value="by_unit_lcl"
                                                   id="by_unit_lcl_checkbox"
                                                   class="form-check-input toggleElement" checked="checked"/>
                                        </div>
                                        <div class="row show_for_by_unit_lcl" name="show_for_by_unit_lcl_div">
                                            <div class="form-group">
                                                <table id="dynamicTable_by_unit_lcl" class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>LOT</th>
                                                            <th>Dimensions L (CM)</th>
                                                            <th>Dimensions W (CM)</th>
                                                            <th>Dimensions H (CM)</th>
                                                            <th>QTY</th>
                                                            <th>Weight (KG)</th>
                                                            <th>CBM</th>
                                                        </tr>
                                                    </thead>
