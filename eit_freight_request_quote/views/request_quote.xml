                                                <thead>
                                                    <tr>
                                                        <th>LOT</th>
                                                        <th>Container Type</th>
                                                        <th>QTY</th>
                                                        <th>Weight (KG)</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>1</td>
                                                        <td>
                                                            <select name="container_type_ftl_inland[]" class="form-control link-style">
                                                                <t t-foreach="container_type" t-as="item">
                                                                    <option t-esc="item.name" t-att-value="item.id"/>
                                                                </t>
                                                            </select>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="quantity_ftl[]" class="form-control quantity_ftl"/>
                                                        </td>
                                                        <td>
                                                            <input type="number" name="weight_ftl[]" class="form-control weight_ftl"/>
                                                        </td>
                                                        <td>
                                                            <button id="removeRow_ftl" class="btn btn-danger removeRow_ftl">Remove</button>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                            <button id="addRow_ftl" class="btn btn-primary">Add New Line</button>
                                        </div>
                                    </div>
                                    <div class="row show_for_ltl_inland" name="show_for_ltl_inland_div"
                                         style="display: none;">
                                        <div class="form-group">
                                            <label for="by_unit_ltl_checkbox">By Unit</label>
                                            <input type="checkbox" name="by_unit_ltl_checkbox" t-att-value="by_unit_ltl"
                                                   id="by_unit_ltl_checkbox"
                                                   class="form-check-input toggleElement" checked="checked"/>
                                        </div>
                                        <div class="row show_for_by_unit_ltl" name="show_for_by_unit_ltl_div">
                                            <div class="form-group">
                                                <table id="dynamicTable_by_unit_ltl" class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>LOT</th>
                                                            <th>Dimensions L (CM)</th>
                                                            <th>Dimensions W (CM)</th>
                                                            <th>Dimensions H (CM)</th>
                                                            <th>QTY</th>
                                                            <th>Weight (KG)</th>
                                                            <th>CBM</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>1</td>
                                                            <td>
                                                                <input type="number" name="dimensions_l_ltl[]" class="form-control dimensions_l_ltl"/>
                                                            </td>
                                                            <td>
                                                                <input type="number" name="dimensions_w_ltl[]" class="form-control dimensions_w_ltl"/>
                                                            </td>
                                                            <td>
                                                                <input type="number" name="dimensions_h_ltl[]" class="form-control dimensions_h_ltl"/>
                                                            </td>
                                                            <td>
                                                                <input type="number" name="quantity_ltl[]" class="form-control quantity_ltl"/>
                                                            </td>
                                                            <td>
                                                                <input type="number" name="weight_ltl[]" class="form-control weight_ltl"/>
                                                            </td>
                                                            <td>
                                                                <input name="cbm_ltl[]" readonly="readonly" class="form-control cbm_ltl" />
                                                            </td>
                                                            <td>
                                                                <button id="removeRow_ltl" class="btn btn-danger removeRow">Remove</button>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <button id="addRow_ltl" class="btn btn-primary">Add New Line</button>
                                            </div>
                                        </div>
                                        <div class="row hide_for_by_unit_lcl" name="hide_for_by_unit_ltl_div"
                                             style="display: none;">
                                            <div class="form-group">
                                                <table id="Table_lcl" class="table table-striped">
                                                    <thead>
                                                        <tr>
                                                            <th>Weight (KG)</th>
                                                            <th>Volume (M3)</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <input type="number" name="weight_for_volume_ltl[]" class="form-control weight_ltl"/>
                                                            </td>
                                                            <td>
                                                                <input type="number" name="volume_for_volume_ltl[]" class="form-control volume_ltl"/>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-md-2">
                                        <label for="from_port_cities">From</label>
                                    </div>
                                    <div class="col-md-2">
                                        <select id="from_port_cities" name="from_port_cities" class="form-control link-style">
                                            <t t-foreach="from_port_cities" t-as="item">
                                                <option t-esc="item.name" t-att-value="item.id"/>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="to_port_cities">To</label>
                                    </div>
                                    <div class="col-md-2">
                                        <select id="to_port_cities" name="to_port_cities" class="form-control link-style">
                                            <t t-foreach="to_port_cities" t-as="item">
                                                <option t-esc="item.name" t-att-value="item.id"/>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-md-2">
                                        <label for="commodity">Commodity</label>
                                    </div>
                                    <div class="col-md-2">
                                        <select id="commodity" name="commodity" class="form-control link-style">
                                            <t t-foreach="commodity" t-as="item">
                                                <option t-esc="item.name" t-att-value="item.id"/>
                                            </t>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <label for="cargo_readiness_date">Date</label>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="date" id="cargo_readiness_date" name="cargo_readiness_date"
                                               required="required" class="form-control"/>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-md-2">
                                        <label for="commodity">Additional Information</label>
                                    </div>
                                    <div class="col-md-6">
                                        <textarea id="additional_information" name="additional_information"
                                                  class="form-control" rows="5"/>
                                    </div>
                                </div>
                                <br/>
                                <div>
                                    <h4>Contact Details</h4>
                                    <br/>
                                </div>
                                <div class="row">
                                    <div class="col-md-1">
                                        <label for="contact_name">Name</label>
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" id="contact_name" name="contact_name" class="form-control"
                                               required="required"/>
                                    </div>
                                    <div class="col-md-1">
                                        <label for="contact_email">Email</label>
                                    </div>
                                    <div class="col-md-3">
                                        <input type="email" id="contact_email" name="contact_email" class="form-control"
                                               required="required"/>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-md-1">
                                        <label for="contact_name">Company</label>
                                    </div>
                                    <div class="col-md-3">
                                        <input type="text" id="contact_company" name="contact_company"
                                               class="form-control"/>
                                    </div>
                                    <div class="form-group">
