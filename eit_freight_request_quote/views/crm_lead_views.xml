<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_lead_shipping_info_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.shipping</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Shipping Information" name="shipping_info">
                    <field name="transport_type_id"/>
                    <field name="from_port_cities_id"/>
                    <field name="to_port_cities_id"/>
                    <field name="commodity_id"/>
                    <field name="cargo_readiness_date"/>
                    <field name="additional_information"/>
                    <field name="by_unit"/>
                    <field name="equipment_type_id"/>
                    <field name="shipping_info_ids">
                        <tree editable="bottom">
                            <field name="dimensions_l"/>
                            <field name="dimensions_w"/>
                            <field name="dimensions_h"/>
                            <field name="quantity"/>
                            <field name="weight"/>
                            <field name="chw"/>
                            <field name="volume"/>
                            <field name="container_type_id"/>
                            <field name="cbm"/>
                        </tree>
                        <form>
                            <group>
                                <field name="dimensions_l"/>
                                <field name="dimensions_w"/>
                                <field name="dimensions_h"/>
                                <field name="quantity"/>
                                <field name="weight"/>
                                <field name="chw"/>
                                <field name="volume"/>
                                <field name="container_type_id"/>
                                <field name="cbm"/>
                            </group>
                        </form>
                    </field>
                </group>
            </xpath>
        </field>
    </record>


</odoo>
